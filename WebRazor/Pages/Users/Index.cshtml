@page
@model WebRazor.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users";
}

<h1 class="mb-3">Cars</h1>

<div class="mb-3">
    <button type="button" class="btn btn-secondary" onclick="window.location.reload()">Refresh</button>
</div>

@if (Model.Users == null || !Model.Users.Any())
{
    <div class="alert alert-info">No users found.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Email</th>
                <th>Role</th>
                <th style="width:190px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.Roles[0]</td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@user.Id" class="btn btn-sm btn-outline-info">Details</a>
                        <a asp-page="./Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-info">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}