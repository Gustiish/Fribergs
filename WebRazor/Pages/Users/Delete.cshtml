@page
@model WebRazor.Pages.Users.DeleteModel
@{
}


<div class="max-w-3xl mx-auto mt-10 p-6 bg-white rounded-xl shadow-lg">

    <div class="mb-6">
        <h1 class="text-3xl font-bold">@Model.User.UserName</h1>
        <p class="text-gray-500">@Model.User.Email</p>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-8">

        <div class="p-4 border rounded-lg">
            <h2 class="text-lg font-semibold mb-1">User ID</h2>
            <p class="text-gray-600">@Model.User.Id</p>
        </div>

        <div class="p-4 border rounded-lg">
            <h2 class="text-lg font-semibold mb-1">Email</h2>
            <p class="text-gray-600">@Model.User.Email</p>
        </div>
    </div>
    <div class="mb-8">
        <h2 class="text-xl font-semibold mb-3">Roles</h2>

        @if (Model.User.Roles?.Any() == true)
        {
            <div class="flex flex-wrap gap-2">
                @foreach (var role in Model.User.Roles)
                {
                    <span class="px-3 py-1 bg-sky-100 text-sky-700 rounded-full text-sm font-medium">
                        @role
                    </span>
                }
            </div>
        }
        else
        {
            <p class="text-gray-500 italic">No roles assigned.</p>
        }
    </div>
    <div>
        <h2 class="text-xl font-semibold mb-3">Orders</h2>

        @if (Model.User.Orders?.Any() == true)
        {
            <div class="flex flex-col gap-4">

                @foreach (var order in Model.User.Orders)
                {
                    <div class="p-4 border rounded-lg hover:shadow transition">
                        <p><span class="font-semibold">Order ID:</span> @order.Id</p>
                        <p><span class="font-semibold">Date:</span> @order.Start</p>
                        <p><span class="font-semibold">Total:</span> @order.Price</p>
                    </div>
                }

            </div>
        }
        else
        {
            <p class="text-gray-500 italic">No orders found.</p>
        }
    </div>

    <form method="post" asp-page-handler="Delete" asp-route-id="@Model.User.Id"
          class="mt-10 p-6 border border-red-200 bg-red-50 rounded-xl">

        <h2 class="text-xl font-semibold text-red-700 mb-3">Danger Zone</h2>

        <p class="text-gray-700 mb-4">
            This action cannot be undone. Deleting this user will remove all associated data permanently.
        </p>

        <button type="submit"
                class="px-5 py-2 bg-red-600 text-white rounded-lg font-medium hover:bg-red-700 transition">
            Delete User
        </button>
    </form>

</div>