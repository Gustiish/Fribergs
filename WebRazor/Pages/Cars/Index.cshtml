@page
@model WebRazor.Pages.Cars.IndexModel
@{
    ViewData["Title"] = "Cars";
}

<h1 class="mb-3">Cars</h1>

<div class="mb-3">
    <a asp-page="./Create" class="btn btn-primary">Create new car</a>
    <button type="button" class="btn btn-secondary" onclick="window.location.reload()">Refresh</button>
</div>

@if (Model.Cars == null || !Model.Cars.Any())
{
    <div class="alert alert-info">No cars found.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Make</th>
                <th>Model</th>
                <th>Name</th>
                <th>Price</th>
                <th style="width:190px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model.Cars)
            {
                <tr>
                    <td>@car.Brand</td>
                    <td>@car.Model</td>
                    <td>@(car.Name ?? "-")</td>
                    <td>@(car.Price)</td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@car.Id" class="btn btn-sm btn-outline-info">Details</a>
                        <a asp-page="./Edit" asp-route-id="@car.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@car.Id" class="btn btn-sm btn-outline-info">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}