@page
@using WebRazor.Services.PagesServices;
@inject JwtDecoder JwtDecoder;
@model WebRazor.Pages.Cars.IndexModel
@{
    ViewData["Title"] = "Cars";
}

<h1 class="mb-6 text-2xl font-semibold">Cars</h1>

<div class="flex items-center gap-4 mb-6">
    @if (JwtDecoder.Roles?.Any(r => r == "Admin") == true)
    {
        <a asp-page="./Create"
           class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition">
            Create new car
        </a>
    }
    <button type="button"
            class="px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700 transition"
            onclick="window.location.reload()">
        Refresh
    </button>
</div>

@if (Model.Cars == null || !Model.Cars.Any())
{
    <div class="p-4 bg-blue-100 text-blue-800 rounded-lg">
        No cars found.
    </div>
}
else
{
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var car in Model.Cars)
        {
            <div class="bg-white shadow-md rounded-lg border border-gray-200 overflow-hidden flex flex-col">

                <!-- Car Image -->
                <div class="h-48 w-full bg-gray-100 flex items-center justify-center overflow-hidden">
                    @if (!string.IsNullOrWhiteSpace(car.URL))
                    {
                        <img src="@car.URL"
                             alt="@car.Name"
                             class="object-cover w-full h-full" />
                    }
                    else
                    {
                        <div class="text-gray-400 text-sm">
                            No Image
                        </div>
                    }
                </div>

                <!-- Content -->
                <div class="p-5 flex-1 flex flex-col">
                    <h2 class="text-lg font-semibold mb-1">@car.Brand @car.Model</h2>
                    <p class="text-gray-700">
                        <span class="font-medium">Name:</span> @(car.Name ?? "-")
                    </p>
                    <p class="text-gray-700">
                        <span class="font-medium">Price:</span> @car.Price
                    </p>

                    <!-- Actions -->
                    <div class="mt-4 flex gap-3 flex-wrap">
                        <a asp-page="./Details" asp-route-id="@car.Id"
                           class="px-3 py-1 border border-blue-500 text-blue-600 rounded-md hover:bg-blue-50 transition">
                            Details
                        </a>

                        @if (JwtDecoder.Roles?.Any(r => r == "Admin") == true)
                        {
                            <a asp-page="./Edit" asp-route-id="@car.Id"
                               class="px-3 py-1 border border-yellow-500 text-yellow-600 rounded-md hover:bg-yellow-50 transition">
                                Edit
                            </a>

                            <a asp-page="./Delete" asp-route-id="@car.Id"
                               class="px-3 py-1 border border-red-500 text-red-600 rounded-md hover:bg-red-50 transition">
                                Delete
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}