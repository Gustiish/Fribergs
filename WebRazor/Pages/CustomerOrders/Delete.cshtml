@page "{id:guid}"
@model WebRazor.Pages.CustomerOrders.DeleteModel
@{
    ViewData["Title"] = "Delete Order";
}

<div class="mx-auto max-w-4xl py-10">
    <h1 class="text-3xl font-semibold mb-8">Delete Order</h1>

    <div class="bg-white shadow rounded-xl border p-6 space-y-6">

   
        <div class="grid grid-cols-2 gap-y-4 text-sm">
            <span class="font-medium text-gray-600">Order ID</span>
            <span>@Model.Order.Id</span>

            <span class="font-medium text-gray-600">Price</span>
            <span>@Model.Order.Price</span>

            <span class="font-medium text-gray-600">Start</span>
            <span>@Model.Order.Start</span>

            <span class="font-medium text-gray-600">End</span>
            <span>@Model.Order.End</span>

            <span class="font-medium text-gray-600">User</span>
            <span>@Model.Order.User.Email</span>

            <span class="font-medium text-gray-600">Car</span>
            <span>@Model.Order.Car.Name</span>

            <span class="font-medium text-gray-600">Brand</span>
            <span>@Model.Order.Car.Brand</span>

            <span class="font-medium text-gray-600">Model</span>
            <span>@Model.Order.Car.Model</span>
        </div>


        <div class="flex gap-6 items-start">

            <!-- Image -->
            <div class="flex-shrink-0">
                <img src="@Model.Order.Car.URL"
                     alt="Car Image"
                     class="rounded-lg shadow max-h-64 w-auto" />
            </div>

            <!-- Button Panel -->
            <div class="flex flex-col gap-4 flex-grow">

                <div class="bg-red-50 border border-red-200 text-red-800 p-4 rounded-lg">
                    <p class="font-semibold">Are you sure you want to delete this order?</p>
                    <p class="text-sm">This action cannot be undone.</p>
                </div>

                <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Order.Id">
                    <button type="submit"
                            class="px-6 py-2 bg-red-600 text-white rounded-lg shadow hover:bg-red-700 transition w-full">
                        Delete
                    </button>
                </form>

                <a asp-page="./Index"
                   class="text-gray-600 hover:text-gray-900 text-sm text-center">
                    Back to my orders
                </a>

            </div>
    </div>
</div>