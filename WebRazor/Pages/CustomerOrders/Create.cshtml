@page "{id:guid}"
@model WebRazor.Pages.CustomerOrders.CreateModel
@{
    ViewData["Title"] = "Create Booking";
}

<div class="max-w-3xl mx-auto mt-10 p-6 bg-white rounded-xl shadow-lg">

    <!-- Header -->
    <div class="mb-6">
        <h1 class="text-3xl font-bold">Create Booking</h1>
        <p class="text-gray-500">Car: @Model.Order.Car.Name (@Model.Order.Car.Brand @Model.Order.Car.Model)</p>
    </div>

    <!-- Car Info -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-8">
        <div class="p-4 border rounded-lg">
            <h2 class="text-lg font-semibold mb-1">Car Name</h2>
            <p class="text-gray-600">@Model.Order.Car.Name</p>
        </div>
        <div class="p-4 border rounded-lg">
            <h2 class="text-lg font-semibold mb-1">Brand</h2>
            <p class="text-gray-600">@Model.Order.Car.Brand</p>
        </div>
        <div class="p-4 border rounded-lg">
            <h2 class="text-lg font-semibold mb-1">Model</h2>
            <p class="text-gray-600">@Model.Order.Car.Model</p>
        </div>
        <div class="p-4 border rounded-lg">
            <h2 class="text-lg font-semibold mb-1">Price</h2>
            <p class="text-gray-600">$@Model.Order.Car.Price</p>
        </div>
    </div>

    <!-- Booking Form -->
    <form method="post" class="grid grid-cols-1 gap-6">

        <input asp-for="Order.CarId" type="hidden" />

        <!-- First row: Start + End -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">

            <div class="p-4 border rounded-lg">
                <label asp-for="Order.Start" class="block font-semibold mb-1">Start Date</label>
                <input asp-for="Order.Start" type="date"
                       class="border border-gray-300 rounded px-3 py-2 w-full focus:outline-none focus:border-sky-500" />
            </div>

            <div class="p-4 border rounded-lg">
                <label asp-for="Order.End" class="block font-semibold mb-1">End Date</label>
                <input asp-for="Order.End" type="date"
                       class="border border-gray-300 rounded px-3 py-2 w-full focus:outline-none focus:border-sky-500" />
            </div>

        </div>

        <!-- Price row -->
        <div class="p-4 border rounded-lg">
            <label asp-for="Order.Price" class="block font-semibold mb-1">Price</label>
            <input asp-for="Order.Price" type="number"
                   class="border border-gray-300 rounded px-3 py-2 w-full focus:outline-none focus:border-sky-500" />
        </div>



        <!-- Submit -->
        <button type="submit"
                class="px-5 py-2 bg-sky-500 text-white rounded-lg font-medium hover:bg-sky-600 transition">
            Create Booking
        </button>
    </form>
</div>
