@page
@model WebRazor.Pages.CustomerOrders.IndexModel
@{
    ViewData["Title"] = "CustomerOrders";
}

<h1 class="mb-3">Orders</h1>

<div class="mb-3">
    <button type="button" class="btn btn-secondary" onclick="window.location.reload()">Refresh</button>
</div>

@if (Model.Orders == null || !Model.Orders.Any())
{
    <div class="alert alert-info">No cars found.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Car</th>
                <th>Price</th>
                <th>Start</th>
                <th>End</th>
                <th></th>
                <th style="width:190px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.Car.Name</td>
                    <td>@order.Price</td>
                    <td>@order.Start</td>
                    <td>@order.End<td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-info">Details</a>
                        <a asp-page="./Delete" asp-route-id="@order.Id" class="btn btn-sm btn-outline-info">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}